{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "rooms": {
      ".read": "auth != null",
      ".indexOn": ["createdAt", "category", "status"],
      "$roomId": {
        ".write": "auth != null && (!data.exists() || data.child('ownerId').val() == auth.uid || !newData.exists())",

        "members": {
          "$uid": {
            ".write": "auth != null && (auth.uid == $uid || data.parent().parent().child('ownerId').val() == auth.uid)"
          }
        },

        "messages": {
          "$msgId": {
            ".write": "auth != null && root.child('rooms/' + $roomId + '/members/' + auth.uid).exists()",
            ".validate": "newData.hasChildren(['uid', 'text', 'ts']) && newData.child('uid').val() == auth.uid"
          }
        }
      }
    },

    "custom_books": {
      ".read": "auth != null",
      "$bookId": {
        ".write": "auth != null && (!data.exists() || data.child('addedBy').val() == auth.uid)"
      }
    }
  }
}